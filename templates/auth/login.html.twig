{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-image">
            <img src="{{ asset('img/connexion.png') }}" alt="Image d'inscription">
        </div>
        <div class="form-block">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <h2>Connexion</h2>
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control form-input" autocomplete="email" required autofocus>
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control form-input" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn" type="submit">
                    Connexion
                </button>
                <a class="link-white" href="{{ path('app_sign_up') }}">
                    <p>Vous n'avez pas encore de compte ? Inscription</p>
                </a>
            </form>
        </div>
    </div>
{% endblock %}
